<Window x:Class="Erronka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Elkartea TPV"
        Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F2F2F2">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="260"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="BtnTicket" Content="📅 Ticket" Width="180" Height="60" Background="#2E3A59" Foreground="White" FontSize="18" Click="Button_Ticket_Click"/>
            <Button x:Name="BtnErreserbak" Content="📅 Erreserbak" Width="180" Height="60" Background="#2E3A59" Foreground="White" FontSize="18" Click="Button_Erreserbak_Click"/>
            <Button x:Name="BtnBiltegia" Content="📦 Biltegia" Width="180" Height="60" Background="#2E3A59" Foreground="White" FontSize="18" Click="Button_Stock_Click"/>
            <Button x:Name="BtnErabiltzaileak" Content="👥 Erabiltzaileak" Width="180" Height="60" Background="#2E3A59" Foreground="White" FontSize="18" Click="Button_Erabiltzaileak_Click"/>
        </StackPanel>
        
        <ContentControl x:Name="MainContent"
                    Grid.Column="1"
                    Background="White"
                    Margin="10"/>

        <Grid Grid.Column="2" Background="#E6E6E6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="🖨 Ticketa inprimatu" Background="#0078D7" Foreground="White" Height="40" Margin="0,0,0,10" Click="Button_Imprimir_Click"/>

            <UniformGrid Grid.Row="1" Rows="5" Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Content="CE" Background="#FF6666" Click="Button_CE_Click"/>
                <Button Content="/" />
                <Button Content="*" />
                <Button Content="-" />
                <Button Content="7" Click="Zenbakia_Click"/>
                <Button Content="8" Click="Zenbakia_Click"/>
                <Button Content="9" Click="Zenbakia_Click"/>
                <Button Content="+"/>
                <Button Content="4" Click="Zenbakia_Click"/>
                <Button Content="5" Click="Zenbakia_Click"/>
                <Button Content="6" Click="Zenbakia_Click"/>
                <Button Content="=" Click="KantitateaAldatu"/>
                <Button Content="1" Click="Zenbakia_Click"/>
                <Button Content="2" Click="Zenbakia_Click"/>
                <Button Content="3" Click="Zenbakia_Click"/>
                <Button Content="0" Click="Zenbakia_Click"/>
            </UniformGrid>
            <TextBox x:Name="Emaitza" HorizontalAlignment="Center" Margin="0,396,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="50"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="#FFFFFF" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Grid.RowSpan="2" Background="#2E3A59">
                <TextBlock Text="Categorías" 
               Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <ListBox x:Name="CategoryList"
                     Background="#1E2A44"
                     Foreground="White"
                     BorderThickness="0"
                     SelectionChanged="CategoryList_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBoxItem Content="CAFEAK"/>
                    <ListBoxItem Content="GARAGARDOAK"/>
                    <ListBoxItem Content="IZOZKIAK"/>
                    <ListBoxItem Content="LIKOREAK"/>
                    <ListBoxItem Content="SNAKS"/>
                    <ListBoxItem Content="REFRESKOAK"/>
                    <ListBoxItem Content="VARIOS"/>
                    <ListBoxItem Content="ARDOAK"/>
                </ListBox>
            </StackPanel>

            <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="ProductList" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="120" Margin="5" Cursor="Hand" MouseDown="Produktua_Click">
                                <Image Source="{Binding Image}" Height="80" Width="80" Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Name}" TextAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

    </Grid>
</Window>
