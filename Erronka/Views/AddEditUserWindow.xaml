<Window x:Class="Erronka.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Erabiltzailea" Height="262" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Izena:"/>
            <TextBox x:Name="TxtIzena"/>

            <TextBlock Text="Pasahitza:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="TxtPasahitza"/>

            <TextBlock Text="Rola:" Margin="0,10,0,0"/>
            <ComboBox x:Name="CbRola" Width="150">
                <ComboBoxItem Content="admin"/>
                <ComboBoxItem Content="user"/>
            </ComboBox>
        </StackPanel>

        <Button Content="Gorde" Grid.Row="1" Height="40"
                Background="#2E3A59" Foreground="White"
                Click="Gorde_Click"/>
    </Grid>
</Window>
