<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Erronka.Views.ErreserbakView"
             Background="White" av:DesignHeight="800" av:DesignWidth="1280">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="763*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📅 Erreserbak" FontSize="24" FontWeight="Bold" Margin="10,0,0,20" Grid.Column="1"/>

        <DataGrid x:Name="ReservationGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,10,0,10" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mesa" Binding="{Binding TableNumber}" Width="300"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Date}" Width="300"/>
                <DataGridTextColumn Header="Turno" Binding="{Binding Turno}" Width="300"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="221,20,0,20" Grid.Column="1">
            <Button Content="➕ Nueva" Width="100" Margin="10"/>
            <Button Content="✏️ Editar" Width="100" Margin="10"/>
            <Button Content="❌ Cancelar" Width="100" Margin="10"/>
        </StackPanel>
        
    </Grid>
</UserControl>
