<Window x:Class="Erronka.Views.ErreserbakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Erreserbak"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="White">

	<Window.Resources>
		<Style x:Key="MesaStyle" TargetType="Button">
			<Setter Property="Margin" Value="10"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="Height" Value="120"/>
			<Setter Property="Background" Value="#C6FFC6"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
	</Window.Resources>

	<Grid Margin="20">

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

        <UniformGrid x:Name="MahiakGrid" Columns="4" Rows="3" Margin="10">

            <Button Content="Mahai 1" Style="{StaticResource MesaStyle}" Tag="1" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 2" Style="{StaticResource MesaStyle}" Tag="2" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 3" Style="{StaticResource MesaStyle}" Tag="3" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 4" Style="{StaticResource MesaStyle}" Tag="4" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 5" Style="{StaticResource MesaStyle}" Tag="5" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 6" Style="{StaticResource MesaStyle}" Tag="6" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 7" Style="{StaticResource MesaStyle}" Tag="7" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 8" Style="{StaticResource MesaStyle}" Tag="8" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 9" Style="{StaticResource MesaStyle}" Tag="9" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 10" Style="{StaticResource MesaStyle}" Tag="10" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 11" Style="{StaticResource MesaStyle}" Tag="11" Click="Button_Mahia_Click"/>
            <Button Content="Mahai 12" Style="{StaticResource MesaStyle}" Tag="12" Click="Button_Mahia_Click"/>

        </UniformGrid>

		<StackPanel Grid.Column="1" Margin="20">

			<TextBlock Text="📅 Data" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"/>
			<Calendar x:Name="FechaPicker" Margin="0 0 0 15"/>

			<TextBlock Text="🍽 Txanda" FontWeight="Bold" FontSize="16"/>
			<StackPanel Orientation="Horizontal" Margin="0 5 0 15">
				<RadioButton x:Name="ComidaRB" Content="bazkaria" GroupName="Txanda" IsChecked="True" Margin="0 0 20 0"/>
				<RadioButton x:Name="CenaRB" Content="afaria" GroupName="Txanda"/>
			</StackPanel>

			<TextBlock Text="👤 Izena" FontWeight="Bold" FontSize="16"/>
			<TextBox x:Name="ClienteTxt" Height="30" Margin="0 5 0 15"/>

			<Button Content="✔ Gorde Erreserba"
                    Background="#2E3A59"
                    Foreground="White"
                    Height="45"
                    FontSize="16"
                    Click="Reservar_Click"/>

		</StackPanel>

	</Grid>


</Window>


